import pandas as pd
from sklearn.preprocessing import LabelEncoder
from sklearn.model_selection import train_test_split
from sklearn.feature_extraction.text import TfidfVectorizer

# Fonction pour charger les données
def load_data(file_path):
    return pd.read_csv(file_path)

# Fonction principale pour le traitement du texte et la préparation des données
def process_data(training_data_pd):
    # Séparation des features et des labels
    X = training_data_pd['sentence']  # Features (données textuelles)
    y = training_data_pd['difficulty']  # Labels (niveaux de difficulté)

    # Encodage des labels
    label_encoder = LabelEncoder()
    y_encoded = label_encoder.fit_transform(y)

    # Division des données en ensembles d'entraînement et de validation
    X_train, X_val, y_train, y_val = train_test_split(X, y_encoded, test_size=0.2, random_state=42)

    # Vectorisation du texte
    vectorizer = TfidfVectorizer()
    X_train_transformed = vectorizer.fit_transform(X_train)
    X_val_transformed = vectorizer.transform(X_val)

    return X_train_transformed, X_val_transformed, y_train, y_val, vectorizer
